import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		int count = 0;
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		while (n != 1) {
		    System.out.println(n);
			if (n % 2 == 0) {
				n = n / 2;
				count += 1;
			}
			else {
				n = (3 * n + 1) / 2;
				count += 1;
			}
		}
		System.out.println(count);
	}
}
