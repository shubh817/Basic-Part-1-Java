import java.util.*;
public class Main
{
	public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    System.out.println("Enter the size of array: ");
    int n = sc.nextInt();
    
    int ar[]=new int[n];
    for(int i=0;i<n;i++)
    {
        ar[i]=sc.nextInt();
    }
    int even=0;
    int odd=0;
    for(int i=0;i<n;i++)
    {
        if(ar[i]%2==0)
        {
            even++;
        }
        else
        {
            odd++;
        }
    }
    System.out.println("Even nos. "+even);
    System.out.println("Odd nos. "+odd);
    
	}
}
